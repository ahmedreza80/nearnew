  <div id="colorlib-page">

    <div id="colorlib-main">
      <div class="hero-wrap js-fullheight" style="background-image: url(/assets/bg_1.jpg);" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="js-fullheight d-flex justify-content-center align-items-center">
          <div class="col-md-8 text text-center">
            <div class="img mb-4"><img src="<%= @shop.imageshop %>" style="width:150px; height:150px; border-radius: 50%;"></div>
            <div class="desc">
              <h2 class="subheading"><%= @shop.category %></h2>
              <h1 class="mb-4"><%= @shop.name %></h1>
              <p class="mb-4"><%= @shop.description %></p>
              <p class="btn-custom" data-toggle="modal" data-target="#myModal">Contact Shop </p>
              <% if current_user=(@shop.user) %>
<%= link_to 'Edit', edit_shop_path(@shop), class: 'btn btn-danger' %>
<% end %>
            </div>
          </div>
        </div>
      </div>
      <section class="ftco-section">
      <div class="container">
        <div class="row justify-content-center mb-5 pb-2">
          <div class="col-md-7 heading-section text-center ftco-animate">
            <h2 class="mb-4">Products</h2>
            <p>All the products listed here are directly sold by <%= @shop.name %> and NearClick is just there delivery partner, we deliver the product as it is without opening the package.</p>
          </div>
        </div>
        <div class="row">





              <% @products.each do |product| %>
          <div class="col-md-4">
            <div class="blog-entry ftco-animate">
              <a href="#" class="img img-2"><img src="<%= product.image %>" style="width:300px; height:250px;"> </a>
              <div class="text text-2 pt-2 mt-3">
                <span class="category mb-3 d-block"><a href="#"><%= product.name %></a></span>
                <h3 class="mb-4"><a href="#"><%= product.category %></a></h3>
                <h3 class="mb-4"><a href="#">Rs: <%= product.price %></a></h3>
                <p class="mb-4"><%= product.description %></p>
                <div class="author mb-4 d-flex align-items-center">
                  <div class="img mb-4"><img src="<%= @shop.imageshop %>" style="width:50px; height:50px; border-radius: 50%;"></div>
                  <div class="ml-3 info">
                    <span>Sold By</span>
                    <h3><a href="#"><%= @shop.name %></a></h3>
                  </div>
                </div>
                <div class="meta-wrap align-items-center">
                  
                  <div class="half">
                    <p><a href="#" class="btn btn-success">Order Now </a></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
