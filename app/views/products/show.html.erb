<body>
<div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <a class="navbar-brand" style="text-align:center;" href="/">NearClick</a>
  <br>
  <% if user_signed_in? %>
  <p style="text-align:center;">Welcome <%= current_user.username %></p>
  <% else %>
  <p style="text-align:center;">Welcome Guest</p>
  <% end %>
  <% if current_user&.shop %>
  <a href="/products/new">Add Product</a>
  <%= link_to 'Manage Shop', current_user.shop %>
  <% else %>
  <a href="#"><span>0</span> Your Cart</a>
  <a href="#">Wishlist</a>
  <% end %>
  <a href="/welcome/about">About</a>
  <a href="/welcome/contact">Contact</a>
</div>
  
  <div class="container">
    <div class="card">
      <div class="container-fliud">
        <div class="wrapper row">
          <div class="preview col-md-6">
            
            <div class="preview-pic tab-content">
              <div class="tab-pane active" id="pic-1"><img src="<%= @product.image %>" /></div>
              <div class="tab-pane" id="pic-2"><img src="<%= @product.image %>" /></div>
              <div class="tab-pane" id="pic-3"><img src="<%= @product.imagetwo %>" /></div>
              <div class="tab-pane" id="pic-4"><img src="<%= @product.imagethree %>" /></div>
              
            </div>
            <ul class="preview-thumbnail nav nav-tabs">
              <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="<%= @product.image %>" /></a></li>
              <li><a data-target="#pic-2" data-toggle="tab"><img src="<%= @product.imagetwo %>" /></a></li>
              <li><a data-target="#pic-3" data-toggle="tab"><img src="<%= @product.imagethree %>" /></a></li>
              
            </ul>
            
          </div>
          <div class="details col-md-6">
            <h3 class="product-title"><%= @product.name %></h3>
            <div class="rating">
              <div class="stars">
                <h3>NearClick Certified Product</h3>
              </div>
              
            </div>
            <p class="product-description"><%= @product.description %></p>
            <h4 class="price">current price: <span>Rs: <%= @product.price %></span></h4>
            <p class="vote"><strong>91%</strong> of buyers enjoyed this product!</p>
            <div class="action">
              <%= form_tag order_items_path do %>
        <%= hidden_field_tag :product_id, @product.id %>
       
        <%= number_field_tag :quantity, 1 %>
        <div class="ju" style="padding-top:20px;"></div>
              <button class="add-to-cart btn btn-default" type="submit">add to cart</button>
              <% end %>
              <!-- <button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button> -->
            </div>

            <div class="action">
              <% if current_user == @product.user %>
          <%= link_to "Edit", edit_product_path(@product) %>
          <%= link_to "Delete", @product, method: :delete, data: { confirm: "Do you want to delete this listing ?"}%>
          <% end %>




          
        
        
      
        </div>
          </div>
        </div>
      </div>
    </div>
  </div>
